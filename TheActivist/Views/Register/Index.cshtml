@model Register;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container mt-5  pt-5 " >

<div class="row">
    <div class="col-12 col-sm-8 col-md-6 m-auto">
        <div class="card border-0 shadow">
            <div class="card-body rounded-3  border p-4">
                <h3 class="text-center fw-light">Log in to account</h3>
                    <form method="post" class="pt-3">
                        <div asp-validation-summary="All" class="text-danger"></div>
            
                        <div class="form-group p-1">
                            <label asp-for="UserName" class="control-label fw-light"></label>
                            <input type="text" asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group p-1">
                            <label asp-for="Email" class="control-label fw-light"></label>
                            <input type="text" asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group p-1">
                            <label asp-for="Password" class="control-label fw-light"></label>
                            <input type="password" asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group p-1">
                            <label asp-for="confirmPassword" class="control-label fw-light"></label>
                            <input type="password" asp-for="confirmPassword" class="form-control" />
                            <span asp-validation-for="confirmPassword" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="text-center p-1">
                            <input type="submit" value="signup" class="form-control bg-primary btn-block my-4 text-uppercase text-white btn btn-primary" />
                        </div>
            
                        <div class="form-group  p-1">
                            <hr />
                            <div class="justify-content-center d-flex">
                            <h5 class="fw-light text-center pt-2">Existing Account?  </h5>
                            <div class="m-1" ></div>
                            <a href="/Login/Index" class="fw-light text-center text-decoration-none pt-2">  Login</a>
                            </div>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</div>
</div>


