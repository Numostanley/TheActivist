@model IEnumerable<CauseClass>

@{
    ViewData["Title"] = "Home Page";
}

<img class="w-25 mx-auto d-block" src="~/pngegg.png" />
<br />

<h2 class="text-center text-uppercase">Lets help make the world a better place </h2>
<h4 class="text-center text-capitalize">sign any cause below to show your support</h4>
<h5 class="text-center text-capitalize">or create your own cause</h5>
<div class="text-center">
    <a href="/CreateCause/Index" class="btn btn-primary"><i class="bi bi-plus-circle"></i>  CREATE CAUSE</a>
</div>
<br />


<div class="list-group">
     @foreach(var obj in Model) 
     {
        <a asp-controller="CreateCause" asp-action="Details" class="list-group-item rounded-3 border-0 shadow list-group-item-action  mb-3" aria-current="true" asp-route-id="@obj.CausesId">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1">@obj.CausesName </h5>
              <small class="fw-bold">Created by @obj.CreatedBy </small>
            </div>
            <div class="d-flex w-100 justify-content-between">
                 <span class="text-nowrap w-50 overflow-hidden" >@obj.CausesDescription</span>
                <small class="text-muted">@obj.CreatedDateTime</small>
            </div>
          </a>
     }
</div>
